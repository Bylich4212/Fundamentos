#include <iostream>
#include <string>
using namespace std;

int main() {
    string texto;

    cout << "Introduce un texto para conversión: ";
    getline(cin, texto);

    for (char &c : texto) {
        c = toupper(c);
    }

    cout << "Texto en mayúsculas: " << texto << endl;

    return 0;
}
